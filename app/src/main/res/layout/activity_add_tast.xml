<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/pink_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dodaj zadanie"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/pink_text"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Wpisz treść zadania"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonSelectImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wybierz obrazek"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/imagePreview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerInside" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zapisz zadanie"
        android:backgroundTint="@color/pink_button"
        android:textColor="@android:color/white"/>

</LinearLayout>